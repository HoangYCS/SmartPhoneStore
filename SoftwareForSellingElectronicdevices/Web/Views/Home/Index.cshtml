<div class="row row-cols-2 row-cols-md-4 g-4">
    @foreach (var item in Model.ListItem)
    {
        <div class="col">
            <div class="card h-100">
                <a href="/product/Detail/@item.Id">
                    <img src="/ImageProduct/@item.Url" style="height: 300px; object-fit: fill; width: 100%;">
                </a>
                <div class="card-body">
                    <a href="/product/Detail/@item.Id" class="text-decoration-none">
                        <h5 class="card-title">@item.Name.ToUpper() @item.Ram.ToUpper() @item.Color.ToUpper()</h5>
                    </a>
                    <p class="card-text mx-3 border-top border-bottom">
                        <span><strong>- Brand: </strong>@item.Brand</span><br />
                        <span><strong>- Ram: </strong>@item.Ram</span><br />
                        <span><strong>- Category: </strong>@item.Category</span><br />
                        <span><strong>- Screen: </strong>@item.Screen</span>
                    </p>
                </div>
                <div class="d-flex justify-content-around" style="height: 50px">
                    <p class="fs-5 text-warning">@item.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</p>
                    <div>
                        <form action="@Url.Action("AddItem", "Cart")" method="post">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-secondary btn-sm d-block">
                                <i class="fa-solid fa-cart-shopping"></i>
                                Add to cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
<nav aria-label="Page navigation example" class="d-flex justify-content-center my-2">
    <ul class="pagination">
        @if (Model.Info!.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@BuildPaginationUrl(1)" aria-label="First">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">First</span>
                </a>
            </li>
        }
        @for (int i = 1; i <= Model.Info!.NumberOfPages; i++)
        {
            <li class="page-item @(i == Model.Info.CurrentPage ? "active" : "")">
                <a class="page-link" href="@BuildPaginationUrl(i)">@i</a>
            </li>
        }
        @if (Model.Info!.CurrentPage < Model.Info!.NumberOfPages)
        {
            <li class="page-item">
                <a class="page-link" href="@BuildPaginationUrl(Model.Info.NumberOfPages)" aria-label="Last">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Last</span>
                </a>
            </li>
        }
    </ul>



</nav>
