@inject Microsoft.AspNetCore.Mvc.Routing.IUrlHelperFactory UrlHelperFactory

@{
    var urlHelper = UrlHelperFactory.GetUrlHelper(ViewContext);
    var queryString = urlHelper.ActionContext.HttpContext.Request.QueryString;
}

@inject IHttpContextAccessor Httpcontext
@{
    ViewData["Title"] = "Home Page";
}

@functions {
    string BuildPaginationUrl(int page)
    {
        string url = "?currentPage=" + page;

        if (Httpcontext.HttpContext.Request.Query["brands"].Count > 0)
        {
            foreach (var brand in Httpcontext.HttpContext.Request.Query["brands"])
            {
                url += "&brands=" + brand;
            }
        }

        if (Httpcontext.HttpContext.Request.Query["colors"].Count > 0)
        {
            foreach (var color in Httpcontext.HttpContext.Request.Query["colors"])
            {
                url += "&colors=" + color;
            }
        }

        return url;
    }
}

