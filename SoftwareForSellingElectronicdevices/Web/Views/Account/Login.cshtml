@model Data.DTOs.UserLoginDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/register.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid d-flex justify-content-center align-items-center full-height">
        <div class="p-3 shadow-sm p-3 mb-5 bg-body-tertiary rounded form-container">
            <form asp-action="login" method="post" asp-controller="account">
                <h1>Form Login</h1>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input type="text" value="Admin" class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input value="123456" asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a class="btn btn-primary mx-lg-1" href="/">Back</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>